<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="stateHidden"
    tools:context="utep.keanue.sensordata.MainActivity"
    android:weightSum="1">

    <!-- Main Frame -->
    <RelativeLayout
        android:id="@+id/frameMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Accelerometer -->
        <TextView
            android:id="@+id/xText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yText"
            android:layout_alignBottom="@+id/yText"
            android:layout_alignStart="@+id/lat_text"
            android:background="@drawable/textbox_blue"
            android:text="xPos"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/yText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zText"
            android:layout_alignBottom="@+id/zText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textbox_orange"
            android:text="yPos"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/zText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bottomBar"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="39dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/textbox_green_shadow"
            android:text="zPos"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <!-- Location -->
        <TextView
            android:id="@+id/lat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/alt_text"
            android:layout_below="@+id/xText"
            android:layout_marginTop="59dp"
            android:text="Latitude:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/long_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alt_text"
            android:layout_alignStart="@+id/alt_text"
            android:layout_marginBottom="40dp"
            android:background="@drawable/gps"
            android:text="Longitude:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/alt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lat_text"
            android:layout_marginTop="48dp"
            android:layout_toStartOf="@+id/instructionsText"
            android:text="Altitude:"
            android:textSize="30sp" />

        <!-- Interval Selection -->
        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/number_opt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="This will update rapidly..."
            android:textSize="20dp" />

        <EditText
            android:id="@+id/number_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:layout_alignEnd="@+id/zText"
            android:layout_alignStart="@+id/alt_text"
            android:layout_marginBottom="95dp"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="Measure (Times per Second)"
            android:textColor="@color/bb_darkBackgroundColor"
            android:theme="@style/MyEditTextTheme" />

        <!-- Bottom Bar-->
        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:bb_activeTabColor="@color/white"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />


    </RelativeLayout>


</LinearLayout>