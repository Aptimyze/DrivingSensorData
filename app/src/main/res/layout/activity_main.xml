<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="utep.keanue.sensordata.MainActivity"
    android:weightSum="1">

    <!-- Main Frame -->
    <RelativeLayout
        android:id="@+id/frameMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Accelerometer -->
        <!--  Changing Text -->
        <TextView
            android:id="@+id/xText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yText"
            android:layout_alignBottom="@+id/yText"
            android:layout_alignStart="@+id/alt_text"
            android:text="xPos"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/yText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zText"
            android:layout_alignBottom="@+id/zText"
            android:layout_centerHorizontal="true"
            android:text="yPos"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/zText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bottomBar"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="102dp"
            android:text="zPos"
            android:textSize="30dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/lat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/alt_text"
            android:layout_below="@+id/xText"
            android:layout_marginTop="59dp"
            android:text="Latitude:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/long_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alt_text"
            android:layout_alignStart="@+id/alt_text"
            android:layout_marginBottom="40dp"
            android:text="Longitude:"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/alt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lat_text"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="48dp"
            android:layout_toStartOf="@+id/instructionsText"
            android:text="Altitude:"
            android:textSize="30dp" />

        <!-- Interval Selection -->
        <EditText
            android:id="@+id/number_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomBar"
            android:layout_alignEnd="@+id/bottomBar"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="110dp"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="Measure (Times per Second)" />


        <TextView
            android:id="@+id/instructionsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/number_opt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="This will update rapidly..."
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_toggleGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Toggle_GPS_On"
            android:layout_alignParentEnd="true" />


        <!--Bottom Bar-->
        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />


    </RelativeLayout>


</LinearLayout>